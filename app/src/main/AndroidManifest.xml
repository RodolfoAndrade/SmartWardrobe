<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.arara.smartwardrobe">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".AddWearableActivity" />
        <activity android:name=".ScanLabelActivity" />
        <activity android:name=".MyFriendsActivity" />
        <activity android:name=".MyWearablesActivity" />
        <activity android:name=".AddFriendActivity" />
        <activity android:name=".ViewWearableActivity" />
        <activity android:name=".CreateTagActivity" />
        <activity android:name=".MyWishListActivity"></activity>
    </application>

</manifest>
