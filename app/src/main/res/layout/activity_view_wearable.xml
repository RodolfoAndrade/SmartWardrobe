<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp">

    <TextView
        android:layout_marginTop="50dp"
        android:text="WEARABLE TYPE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Here is the type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvType"/>

    <TextView
        android:layout_marginTop="50dp"
        android:text="WEARABLE BRAND"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Here is the brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBrand"/>

    <TextView
        android:layout_marginTop="50dp"
        android:text="WEARABLE COLORS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Here are the colors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvColors"/>

    <TextView
        android:layout_marginTop="50dp"
        android:text="WEARABLE DESCRIPTION"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"/>

</LinearLayout>